<!DOCTYPE html>
<html>
<head>
<style>


   a{
      text-decoration: none;
      color:black;
    }
    a:hover{
        color:red;
    }
#customers {
    margin:auto;
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 70%;
  margin-top: 70px;
}
body{
    background-color: lemonchiffon;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #4CAF50;
  color: white;
}
#add{
    margin-left:500px;
}
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin-left:590px;
  cursor: pointer;
  
}

.button5 {background-color: #555555;}
.button:hover{
    background-color:rgb(114, 243, 114);
    color:indigo;
}
.header{
    width:100%;
    height:80px;
    background-color:#555555;
    color:white;
    size:bold;
    text-align: center;
    padding-top: 40px;
    
}
.link{
    text-decoration: none;
    color: white;
}
a:hover{
    color: rgb(192, 155, 229);
}
</style>
</head>
<body>
    <h1 class="header" ><a class="link"href="/">ToDoApp</a></h1>   
<table id="customers">
    
  <tr>
    
    <th>Name</th>

    <th>Id</th>
    <th>Age</th>
    <th>City</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <%
  if(users.length!=0){
  
  users.forEach(function(data){
  %>
  <tr>
    <td><%=data.name %></td>
      <td><%=data.id %></td>
     
      <td><%=data.age %></td>
      <td><%=data.city %></td>
      <td><a href="/edit/<%=data.id%>">Edit</a></td>
      <td><a href="/delete/<%=data.id%>">Delete</a></td>
  </tr>
  <%   }
  ) %>
  <% } else{ %>
      <tr>
          <td colspan="7">No Data Found</td>
      </tr>
  <% } %>
</table>
<br>
<form action="/add">
   
    <button class="button button5">Add Record</button>
    </form>
</body>
</html>
